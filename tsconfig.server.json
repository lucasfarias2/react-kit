{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2022",
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "custom.d.ts"],
  "exclude": ["node_modules", "dist", "vite.config.ts"],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true,
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
