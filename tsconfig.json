{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@server/*": ["./src/server/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "vite.config.js"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true,
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
